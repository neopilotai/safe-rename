{
  "name": "safe-rename",
  "version": "1.0.0",
  "description": "Enterprise-grade repo refactor + AI rename planner",
  "type": "module",
  "bin": {
    "safe-rename": "bin/safe-rename.ts"
  },
  "scripts": {
    "build": "bun build bin/safe-rename.ts --outdir dist --target bun",
    "build:extension": "cd vscode-extension && npx tsc --outDir dist --moduleResolution node --target es2020 --module commonjs",
    "build:compile": "tsc",
    "dev": "bun --watch bin/safe-rename.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx eslint src/**/*.ts",
    "format": "bunx prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "minimist": "^1.2.8",
    "p-limit": "^4.0.0",
    "typescript": "^5.6.0",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "vscode": "^1.1.37"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onCommand:safeRename.openUI"
  ],
  "contributes": {
    "commands": [
      {
        "command": "safeRename.openUI",
        "title": "Safe Rename Planner"
      }
    ]
  }
}